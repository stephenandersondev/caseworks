<h1 class="display-1 text-center">Create New Case</h1>

<div class="container">
    <form action="/cases" accept-charset="UTF-8" data-remote="true" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
        <% end %>
        <% end %>
        <div class="form-group">
            <label for="case_client_id">Select a Client</label>
            <select class="form-control" id="case_client_id" name="case[client_id]">
                <option value="">Select a Client</option>
                <% @clients.each do |client| %>
                <option value="<%=client.id%>"><%=client.name%></option>
                <% end %>
            </select>
        </div>
        <div class="form-group">
            <label for="case_social_worker_id">Select a Social Worker</label>
            <select class="form-control" id="case_social_worker_id" name="case[social_worker_id]">
                <option value="">Select a Social Worker</option>
                <% @social_workers.each do |sw| %>
                <option value="<%=sw.id%>"><%=sw.name%></option>
                <% end %>
            </select>
        </div>
        <div class="form-group">
            <label for="case_Resource_id">Select a Resource</label>
            <select class="form-control" id="case_resource_id" name="case[resource_id]">
                <option value="">Select a Resource</option>
                <% @resources.each do |resource| %>
                <option value="<%=resource.id%>"><%=resource.name%></option>
                <% end %>
            </select>
        </div>
        <div class="form-group">
            <label for="case_focus">Focus</label>
            <input type="text" class="form-control" name="case[focus]" id="case_focus" placeholder="Focus" value="<%=@case.focus%>">
        </div>
        <input class="btn btn-primary" type="submit" name="commit" value="Create Case" data-disable-with="Create Case" />
    </form>
</div>