<h1>Resource Details</h1>

<h2>Name</h2>
<h3><%= @resource.name %></h3>

<img src='<%= @resource.image_url%>' class="img-thumbnail">

<iframe
  width="600"
  height="450"
  frameborder="0" style="border:0"
  src="<%=@resource.maps_link%>" allowfullscreen>
</iframe>

<h2>Address</h2>
<h3><%= @resource.address %></h3>

<h2>Phone</h2>
<h3><%= @resource.phone_number %></h3>

<h2>Categories</h2>
<h3><%= @resource.categories %></h3>

<h2>Description</h2>
<h3><%= @resource.description %></h3>

<h2>Hours</h2>
<h3><%= @resource.hours %></h3>

<h2>Web</h2>
<h3><%= link_to @resource.web_address, @resource.web_address %></h3>


 <a class="btn btn-primary" href="/resources/<%=@resource.id%>/edit" role="button">Edit</a>

 <form method="post" action='/resources/<%=@resource.id%>'>
    <input type="hidden" name="_method" value="DELETE">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <input type="hidden" name="id" value="<%=@resource.id%>">
      <input type="submit" value="Delete" class="btn btn-primary">
</form>

