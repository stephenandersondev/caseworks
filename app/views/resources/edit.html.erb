<h1 class="display-1 text-center">Edit Resource</h1>

<div class="container">
<form action="/resources/<%=@resource.id%>" accept-charset="UTF-8" data-remote="true" method="post">
<input type="hidden" name="_method" value="patch">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <div class="alert alert-danger" role="alert">
  <%= error %>
</div>
    <% end %>
<% end %>
  <div class="form-group">
    <label for="resource_name">Name</label>
    <input type="text" class="form-control" name="resource[name]" id="resource_name" placeholder="Name" value="<%=@resource.name%>">
  </div>
   <div class="form-group">
    <label for="resource_address">Address</label>
    <input type="text" class="form-control" name="resource[address]" id="resource_address" placeholder="Address" value="<%=@resource.address%>">
  </div>
  <div class="form-group">
    <label for="resource_phone_number">Phone Number</label>
    <input type="text" class="form-control" name="resource[phone_number]" id="resource_phone_number" placeholder="Phone Number" value="<%=@resource.phone_number%>">
  </div>
  <div class="form-group">
    <label for="resource_categories">Categories</label>
    <input type="text" class="form-control" name="resource[categories]" id="resource_categories" placeholder="Categories" value="<%=@resource.categories%>">
  </div>
   <div class="form-group">
    <label for="resource_description">Description</label>
    <input type="text" class="form-control" name="resource[description]" id="resource_description" placeholder="Description" value="<%=@resource.description%>">
  </div>
   <div class="form-group">
    <label for="resource_hours">Hours</label>
    <input type="text" class="form-control" name="resource[hours]" id="resource_hours" placeholder="Hours" value="<%=@resource.hours%>">
  </div>
    <div class="form-group">
    <label for="resource_web_address">Web Address</label>
    <input type="text" class="form-control" name="resource[web_address]" id="resource_web_address" placeholder="Web Address" value="<%=@resource.web_address%>">
  </div>
  <input class="btn btn-primary" type="submit" name="commit" value="Save Changes" data-disable-with="Save Changes" />
</form>
</div>